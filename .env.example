# ===========================================
# Ki0xk Kiosk Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Chain Configuration (Base Sepolia)
CHAIN_ID=84532
RPC_URL=https://sepolia.base.org

# Kiosk Wallet (operator-funded)
# Generate a new wallet or use existing - this wallet will hold the funds
PRIVATE_KEY=0x_your_private_key_here

# ClearNode WebSocket
# Sandbox for testing, production for mainnet
CLEARNODE_WS_URL=wss://clearnet-sandbox.yellow.com/ws

# Token (Base Sepolia USDC)
USDC_ADDRESS=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# Arc Bridge Kit
# Address where transfer fees are collected (0.001%)
# Can be same as operator wallet or separate fee collection address
FEE_RECIPIENT_ADDRESS=0x_your_fee_recipient_address

# App Settings
MOCK_MODE=false
LOG_LEVEL=debug
